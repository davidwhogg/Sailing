@book{symmetry,
  author = {Ross Garrett},
  publisher = {Sheridan House},
  isbn = {9781574090000},
  title = {The Symmetry of Sailing: The Physics of Sailing for Yachtsmen},
  year = {1996},
  annote = {A good long read about sailing and physics, with a remarkably romantic prose style (for a physics textbook). The author claims that all the diagrams are based on good data; since the origin of those data are not given, we're suspicious. However, the diagrams are beautiful and many considerations about boat and trim are discussed clearly and usefully. The force model presented by us in \secref{sec:model} in this \documentname\ is given almost exactly in Section~8.4 of this book and dismissed summarily as not accurate enough for any purpose. There are some discussions of air and water flow around the sail and keel that I am slightly suspicious about, but overall this book is excellent. The content of the book is descriptive and engineering-oriented; it does not include any working physical model of sailing that could be implemented in an introductory physics class to solve problem-set problems about sailing.}
}

@book{pos,
  author = {John Kimball},
  title = {The Physics of Sailing},
  publisher = {Taylor and Francis},
  year = {2010},
  isbn = {9781420073768},
  annote = {Less comprehensive than \cite{symmetry} but more similar in spirit to our goals, since there are equations for simplified models of forces on boats.
  These equations are derived on the same basic principles (momentum transport from the fluids) as the equations in this \documentname{}.
  This book is the closest of all the physics-of-sailing cannon to delivering an implementable physical model that a student of physics could experiment with, quantitatively, but it stops just short of that.
  The book also clearly says (in contradiction to its own model, we believe) that it is impossible to sail downwind faster than the wind (pp.~36--37 and Figures~3.21, 3.22, and 3.23).}
}

@book{sails,
  author = {Tom Whidden and Michael Levitt},
  publisher = {Seapoint Books},
  isbn = {9780997392005},
  title = {The Art and Science of Sails, Revised Edition},
  year = {2016},
  annote = {A beautiful art-meets-physics book about the design and construction of sails.
  Chapter~3 of this book has very good diagrams and descriptions of sails in the wind, including examples of hypothetical perfectly planar, flat sails. Those examples make the Chapter a very useful physics reference.
  It does away with the pure-Bernoulli explanation of lift and instead works in terms of redirection of flow (that is, in our language, momentum transport).
  This book is only about sails but it is would be a pleasure for any fan of sailing.}
}

@misc{tao,
  title = {Sailing into the wind, or faster than the wind},
  author = {Terence Tao},
